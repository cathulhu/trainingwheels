<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.prototype.princess.trainingwheels.MainActivity">

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_above="@+id/postButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_alignRight="@+id/addLoan"
        android:layout_alignEnd="@+id/addLoan">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/respText"
            android:text="server responce here"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:layout_above="@+id/postButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/postButton"
            android:layout_alignEnd="@+id/postButton"
            android:layout_below="@+id/aprInput" />

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit POST Data"
        android:id="@+id/postButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/incomeInput"
        android:hint="Gross Income"
        android:textAlignment="center"
        android:layout_alignTop="@+id/taxInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/spouseIncomeInput"
        android:layout_alignStart="@+id/spouseIncomeInput" />

    <RadioGroup
        android:id="@+id/taxInput"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/postButton"
        android:layout_alignEnd="@+id/postButton">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tax Filing Status"
            android:id="@+id/textView" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            android:id="@+id/singleRadio" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Married - Filing Seperately"
            android:id="@+id/marriedSepRadio" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Married - Filing Jointly"
            android:id="@+id/marriedTogRadio" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head of Household"
            android:id="@+id/headRadio" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/spouseIncomeInput"
        android:hint="Spouse Income"
        android:textAlignment="center"
        android:layout_below="@+id/incomeInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/taxInput"
        android:layout_toEndOf="@+id/taxInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/debtInput"
        android:hint="Loan Balance"
        android:textAlignment="center"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_below="@+id/taxInput"
        android:layout_marginTop="24dp"

        android:layout_alignLeft="@+id/spouseIncomeInput"
        android:layout_alignStart="@+id/spouseIncomeInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/aprInput"
        android:textAlignment="center"
        android:hint="APR Percent"
        android:layout_alignParentEnd="true"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_below="@+id/debtInput"
        android:layout_alignParentRight="true"

        android:layout_alignLeft="@+id/debtInput"
        android:layout_alignStart="@+id/debtInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Type"
        android:id="@+id/loanSelectbutton"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/aprInput"
        android:layout_alignRight="@+id/aprInput"
        android:layout_alignEnd="@+id/aprInput"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/debtInput"
        android:layout_alignTop="@+id/debtInput"
        android:layout_alignBottom="@+id/loanSelectbutton"
        android:layout_alignRight="@+id/taxInput"
        android:layout_alignEnd="@+id/taxInput"
        android:layout_toLeftOf="@+id/debtInput">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/loanList" />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Loan"
        android:id="@+id/addLoan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:id="@+id/stateButton"
        android:layout_below="@+id/familysizeField"
        android:layout_alignLeft="@+id/addLoan"
        android:layout_alignStart="@+id/addLoan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/familysizeField"
        android:layout_below="@+id/spouseIncomeInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Family Size"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/spouseIncomeInput"
        android:layout_alignStart="@+id/spouseIncomeInput" />



</RelativeLayout>
